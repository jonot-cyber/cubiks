<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Cubiks</title>
    <style>
        body {
            margin: 0;
        }
        #content {
            height: 100vh;
            width: 100vw;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            font-size: 3em;
            font-family: monospace;
        }

        button {
            background-color: #33333305;
            border-radius: 8px;
            border-width: 0;
            cursor: pointer;
            font-family: Helvetica, Arial, sans-serif;
            font-size: 14px;
            line-height: 20px;
            margin: 0;
            padding: 10px 12px;
            text-align: center;
        }

        @media (prefers-color-scheme: dark) {
            #content {
                background-color: #000;
                color: #fff;
            }
        }
    </style>
    <script>
        async function replace() {
            let res = await fetch("scramble")
            let json = await res.json()
            document.getElementById("scramble").textContent = json.join(" ");
        }
    </script>
</head>
<body>
    <div id="content">
        <p id="scramble">{{ .scramble }}</p>
        <button id="button" onclick="replace()">Generate Another!</button>
    </div>
</body>
</html>